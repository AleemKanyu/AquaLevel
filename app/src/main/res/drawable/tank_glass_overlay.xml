<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:top="12dp">
        <shape android:shape="rectangle">
            <corners android:radius="45dp" />

            <stroke
                android:width="5dp"
                android:color="#805FA7A7" />

            <gradient
                android:angle="315"
                android:startColor="#60FFFFFF"
                android:centerColor="#10FFFFFF"
                android:endColor="#40FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:top="50dp"
        android:left="16dp"
        android:width="10dp"
        android:height="180dp">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <gradient
                android:angle="270"
                android:startColor="#80FFFFFF"
                android:endColor="#10FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:top="100dp"
        android:gravity="right"
        android:right="24dp"
        android:width="8dp"
        android:height="120dp">
        <shape android:shape="rectangle">
            <corners android:radius="100dp" />
            <gradient
                android:angle="270"
                android:startColor="#40FFFFFF"
                android:endColor="#05FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:height="24dp"
        android:width="100dp"
        android:gravity="top|center_horizontal">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#E0E0E0" />
            <gradient
                android:angle="270"
                android:startColor="#FFFFFF"
                android:endColor="#E8F4F8"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>