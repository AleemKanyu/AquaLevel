<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:height="20dp"
        android:width="100dp"
        android:gravity="top|center_horizontal"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />
        </shape>
    </item>

    <item android:top="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />

            <stroke
                android:width="4dp"
                android:color="#805FA7A7" />

            <gradient
                android:angle="315"
                android:startColor="#80FFFFFF"
                android:centerColor="#20FFFFFF"
                android:endColor="#60FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:top="20dp"
        android:start="10dp"
        android:end="10dp"
        android:bottom="200dp"> <shape android:shape="rectangle">
        <corners android:radius="30dp" />
        <gradient
            android:angle="270"
            android:startColor="#90FFFFFF"
            android:endColor="#00FFFFFF"
            android:type="linear" />
    </shape>
    </item>

</layer-list>